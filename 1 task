import math

class GeometryCalculator:

    @staticmethod
    def circle_area(radius):
        if radius < 0:
            raise ValueError("Радиус не может быть отрицательным")
        return math.pi * radius ** 2

    @staticmethod
    def triangle_area(a, b, c):
        if a < 0 or b < 0 or c < 0:
            raise ValueError("Длина стороны не может быть отрицательной")
        if a + b <= c or a + c <= b or b + c <= a:
            raise ValueError("Стороны не являются сторонами треугольника")

        s = (a + b + c) / 2
        return math.sqrt(s * (s - a) * (s - b) * (s - c))


if __name__ == "__main__":
    calculator = GeometryCalculator()
    radius = 5
    print(f"Площадь круга с радиусом {radius} равна {calculator.circle_area(radius)}")

    a, b, c = 3, 4, 5
    print(f"Площадь треугольника со сторонами {a}, {b}, {c} равна {calculator.triangle_area(a, b, c)}")
